FROM cimg/elixir:1.18.2-erlang-26.2.1-node

# Switch to root to install system dependencies
USER root

RUN apt-get update && apt-get install -y \
  build-essential \
  inotify-tools \
  git \
  curl \
  postgresql-client \
  && apt-get clean && rm -rf /var/lib/apt/lists/*

# Switch back to the default non-root user (circleci)
USER circleci

# Rest of your Dockerfile remains the same...
WORKDIR /app

# Set environment
ENV MIX_ENV=dev

RUN mix local.hex --force && \
    mix local.rebar --force

# ðŸ›  Create _build and deps to avoid permission errors
RUN mkdir -p /app/_build /app/deps

# Install Elixir deps
COPY mix.exs mix.lock ./
COPY config config
RUN mix deps.get

# COPY assets/package.json assets/package-lock.json ./assets/
# RUN cd assets && npm install

COPY . .

# Install JS deps
WORKDIR /app/assets
RUN npm install

WORKDIR /app

# Expose port
EXPOSE 4000

# Start Phoenix server with code reload
CMD ["mix", "phx.server"]
